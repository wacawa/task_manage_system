<%= javascript_pack_tag 'users/show' %>


<div class="time-boxing secondary">

  <% if @within %>
    <div class="now-line"></div>
  <% end %>
  <%# <div class="task secondary"></div> %>

  <% @tasks.each do |task| %>
    <% st = task.start_time %>
    <% ft = task.finish_time %>
    <% range = ((task.finish_time - task.start_time) / 60).to_i %>
    <% overflow = range >= 40 ? "" : "overflow" %>
    <% sticky = overflow.blank? ? "sticky" : "" %>
    <% day = "%02d" % st.day %>
    <% hour = "%02d" % st.hour %>
    <% min = "%02d" % st.min %>
    <% cname1 = "task_dhm_#{day+hour+min}" %>
    <% cname2 = "range_#{range}" %>
    <% fhour = "%02d" % ft.hour %>
    <% fmin = "%02d" % ft.min %>
    <div class="badge">
      <%= link_to user_task_path(@user, task.id), method: :delete do %>
        <span class="delete-btn"></span>
      <% end %>
    </div>
    <% if @edit_task.present? && task.id == @edit_task.id %>
      <%= form_with(model: task, url: user_task_path(@user, task), local: true) do |f| %>
        <div class="task <%= cname1 %> <%= cname2 %> task-form overflow">
          <%# link_to "削除", user_task_path(@user, task.id), class: "btn btn-light btn-outline-secondary", method: :delete %>
          <%= f.text_field :title, class: "form-control text-secondary" %>
          <div class="row g-2 align-items-center">
            <div class="col-auto">
              <%= f.time_field :start_time, class: "form-control text-secondary" %>
            </div>
            <div class="col-auto">
            〜
            </div>
            <div class="col-auto">
              <%= f.time_field :finish_time, class: "form-control  text-secondary" %>
            </div>
          </div>
            <%= f.text_area :memo, rows: "5", class: "form-control text-secondary", placeholder: "詳細" %>
            <%= f.hidden_field :start_datetime %>
            <%= f.submit "送信", class: "btn btn-light btn-outline-secondary" %>
            <%= link_to "キャンセル", user_path(request.query_parameters.except(:task_id)), class: "btn btn-light btn-outline-secondary" %>
        </div>
      <% end %>
    <% else %>
      <%= link_to user_path(year: params[:year], month: params[:month], day: params[:day], hour: params[:hour], task_id: task.id) do %>
        <div class="task <%= cname1 %> <%= cname2 %> <%= overflow %>">
          <div class="<%= sticky %>">
            <h4 class="task-title"><%= task.title %></h4>
            <div class="time-range"><%= " #{hour} : #{min} 〜 #{fhour} : #{fmin} " %></div>
            <div class="memo"><%= task.memo.nil? ? task.memo : safe_join(task.memo.split("\n"),tag(:br)) %></div>
          </div>
        </div>
      <% end %>
     <% end %>
  <% end %>

  <div class="row">
    <div class="col-md-10 offset-md-1">
      <div class="axis"></div>
      <div class="time">
        <% day = @day[0] %>
        <% for hour in [*@hour..@end_hour] do %>
          <% h = hour % 24 %>
          <% day = @day[1] if @hour != 0 && h == 0 %>
          <% d = "%02d" % day %>
          <% h = "%02d" % h %>
          <% if hour != @end_hour %>
            <% for m in 0..59 do %>
              <% cname = m == 0 ? "hour" : "" %>
              <% m = "%02d" % m %>
              <% dhm = "dhm_#{d+h+m}" %>
              <div class="<%= dhm %> <%= cname %>"><%= "#{h.to_i} : #{m}" if m == "00" %></div>
            <% end %>
          <% else %>
            <div class="dhm_<%= d+h %>00 hour"><%= "#{h.to_i} : 00" %></div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <% now = Time.now %>
  <% cname = @within ? "#{now.year}-#{"%02d" % now.month}-#{"%02d" % now.day}" : "#{@year}-#{"%02d" % @month}-#{"%02d" % @day[0]}" %>
  <div class="today-view <%= cname %>">
    <canvas id="today" width="120" height="100"></canvas>
  </div>
  <% if @user.provider.present? && @prev.present? %>
    <% time = @prev.start_datetime %>
    <% hash = {year: time.year, month: time.month, day: time.day, hour: time.hour, prev: true} %>
    <div class="prev">
      <%= link_to user_path(@user, hash) do %> 
        <%= image_tag("arrow-left.png") %>
      <% end %>
    </div>
  <% end %>
  <% if @user.provider.present? && @next_time.present? %>
    <% time = @next_time %>
    <% hash = {year: time.year, month: time.month, day: time.day, hour: time.hour, next: true} %>
    <div class="next">
      <%= link_to user_path(@user, hash) do %> 
        <%= image_tag("arrow-right.png") %>
      <% end %>
    </div>
  <% end %>
  <% if @within %>
    <% if @user.provider && @user.email.present? %>
      <div class="mail">
        <% time_hash = {year: @time.year, month: @time.month, day: @time.day, hour: @time.hour} %>
        <%= link_to send_mail_user_path(@user,
         year: @time.year, month: @time.month, day: @time.day, hour: @time.hour),
          method: :post, data: {confirm: "ご登録のアドレス宛にタスクを送信します。"} do %>
          <%= image_tag("mail.png") %>
        <% end %>
      </div>
    <% end %>
    <div class="addtask">
      <%= link_to new_user_task_path(@user, day: @day[0], hour: @hour), remote: true do %> 
        <canvas id="plus" width="100" height="100"></canvas>
      <% end %>
    </div>
  <% end %>
  <div class="to_intro">
    <%= link_to intro_path, remote: true do %> 
     <%= image_tag("question_mark.png") %>
    <% end %>
  </div>

</div>
<div class="modal task-modal"></div>
<div class="modal registration"></div>
<div class="modal intro"></div>


